@model DataLayer.Libros

@{
    ViewBag.Title = "Detalles";
}


<div>
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h3 class="modal-title" id="myModalLabel">
            <b>@Resources.Resources.SelectionBook</b><i> @Html.DisplayFor(model => model.nomLibro)</i>
        </h3>
    </div>
    <div class="form-group row" style="margin-left:50px">
        <div>
            <label for="example-text-input" class="col-2 col-form-label">@Resources.Resources.ISBN</label>
        </div>
        <div class="well well-sm">
            @Html.DisplayFor(model => model.ISBN)
        </div>

        <div>
            <label for="example-text-input" class="col-2 col-form-label">@Resources.Resources.Author</label>
        </div>
        <div class="well well-sm">
            @Html.DisplayFor(model => model.autor)
        </div>

        <div>
            <label for="example-text-input" class="col-2 col-form-label">@Resources.Resources.Editorial</label>
        </div>
        <div class="well well-sm">
            @Html.DisplayFor(model => model.editorial)
        </div>

        <div>
            <label for="example-text-input" class="col-2 col-form-label">@Resources.Resources.Commentary</label>
        </div>
        <div class="well well-sm" style="max-width:80%!important">
            @Html.DisplayFor(model => model.comentario)
        </div>
    </div>
</div>
