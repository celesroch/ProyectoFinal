@model DataLayer.Libros

@{
    ViewBag.Title = "Create";
}

<h2>Nuevo Libro:</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-horizontal">
        <hr />
        <div class="row">
            <div class="col-xs-2 col-md-2 col-lg-2">
                <label>@Resources.Resources.NameBook</label>
            </div>
            <div class="col-xs-3 col-md-3 col-lg-3">
                @Html.EditorFor(model => model.nomLibro, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.nomLibro, "", new { @class = "text-danger" })
            </div>

            <div class="col-xs-2 col-md-2 col-lg-2">
                <label>@Resources.Resources.ISBN</label>
            </div>
            <div class="col-xs-3 col-md-3 col-lg-3">
                @Html.EditorFor(model => model.ISBN, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ISBN, "", new { @class = "text-danger" })
            </div>

        </div>
        <br />
        <div class="row">
            <div class="col-xs-2 col-md-2 col-lg-2">
                <label>@Resources.Resources.Author</label>
            </div>
            <div class="col-xs-3 col-md-3 col-lg-3">
                @Html.EditorFor(model => model.autor, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.autor, "", new { @class = "text-danger" })
            </div>
            <div class="col-xs-2 col-md-2 col-lg-2">
                <label>@Resources.Resources.Editorial</label>
            </div>
            <div class="col-xs-3 col-md-3 col-lg-3">
                @Html.EditorFor(model => model.editorial, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.editorial, "", new { @class = "text-danger" })
            </div>

        </div>
        <br />
        <div class="row">
            <div class="col-xs-2 col-md-2 col-lg-2">
                <label>@Resources.Resources.Commentary</label>
            </div>
            <div class="col-xs-8 col-md-8 col-lg-8">
                @Html.EditorFor(model => model.comentario, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.comentario, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-warning" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
