@model DataLayer.Prestamos

@{
    ViewBag.Title = "Prestamos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Préstamos</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        <div class="row">
            <div class="col-xs-2 col-md-2 col-lg-2">
                <label>@Resources.Resources.NameBook</label>
            </div>
            <div class="col-xs-3 col-md-3 col-lg-3">
                @Html.DropDownList("bookList1", ViewBag.listBooks as SelectList,"---Libros---")
                @*@Html.EditorFor(model => model.idLibro, new { htmlAttributes = new { @class = "form-control" } })*@
            </div>
            <div class="col-xs-2 col-md-2 col-lg-2">
                <label>@Resources.Resources.NameUser</label>
            </div>
            <div class="col-xs-3 col-md-3 col-lg-3">
                @Html.DropDownList("bookList1", ViewBag.listUsers as SelectList, "manolo")
                @Html.ValidationMessageFor(model => model.idUsuario, "", new { @class = "text-danger" })
            </div>

        </div>
        <br/>
        <div class="row">
            <div class="col-xs-2 col-md-2 col-lg-2">
                <label>@Resources.Resources.Date</label>
            </div>
            <div class="col-xs-3 col-md-3 col-lg-3">
                @Html.EditorFor(model => model.Fecha, new { htmlAttributes = new { @class = "form-control", @placeholder = "dd/mm/yyyy" } })
                @Html.ValidationMessageFor(model => model.Fecha, "", new { @class = "text-danger" })
            </div>
            <div class="col-xs-2 col-md-2 col-lg-2">
                <label>@Resources.Resources.Observations</label>
            </div>
            <div class="col-xs-3 col-md-3 col-lg-3">
                @Html.EditorFor(model => model.Observaciones, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Observaciones, "", new { @class = "text-danger" })
            </div>

        </div>
        <br/>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="button" class="btn btn-warning" OnClick="location.href = '/Prestamos/Index'">Guardar</button>

                @*<input type="submit" value="Guardar" class="btn btn-warning" />*@
            </div>
        </div>
    </div>
}
